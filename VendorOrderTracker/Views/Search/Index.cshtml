@using VendorOrderTracker.Models;

@{
  Layout = "_Layout";
}

<div class="card">
  <div class="card-title">
    <h2>Results:</h2>
  </div>
@if (Model.Count == 0)
{
  <p>Your search did not match any Vendors</p>
}
else
{
  <ul>
    @foreach (Vendor vendor in Model)
    {
      <li><a href="/vendors/@vendor.Id">@vendor.Name</a></li>
    }
  </ul>
}
</div>