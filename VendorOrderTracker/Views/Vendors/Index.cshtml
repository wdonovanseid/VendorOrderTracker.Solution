@using VendorOrderTracker.Models;

@{
  Layout = "_Layout";
}

<div class="jumbotron">
  <h1>All Vendors</h1>
</div>
<div class="card">
  <ul>
    @if (Model.Count == 0)
    {
      <p>There are no vendors added yet</p>
    }
    else
    {
      @foreach (Vendor vendor in Model)
      {
        <li class="links"><a href="/vendors/@vendor.Id">@vendor.Name</a></li>
      }
    }
  </ul>

  <p class="btn btn-info"><a href="/vendors/new">Add New Vendor</a></p>
  <form action="/vendors/delete" method="post">
    <button class="btn btn-danger" type="submit">Delete all Vendors</button>
  </form>
</div>